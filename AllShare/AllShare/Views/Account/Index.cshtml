
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Ajax.BeginForm("Login", new AjaxOptions { HttpMethod = "POST" }))
{
    <div class="row">
        <div class="large-12 columns">
            <label>
                Username
                <input type="text" placeholder="large-12.columns" name="Username" />
            </label>
        </div>
    </div>
    <div class="row">
        <div class="large-4 columns">
            <label>
                Password
                <input type="password" placeholder="large-4.columns" name="Password" />
            </label>
        </div>
    </div>

    <button type="submit" class="button radius">Login</button>
}


